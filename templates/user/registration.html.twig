{% extends 'base.html.twig' %}

{% block title %}My Quizz - {{ template_name }} {% endblock %}

{% block stylesheets %}
  {{ encore_entry_link_tags('app') }}
  {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block body %}
    <h1 class="registerMsg">Inscription</h1>
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
            <div class="box">
                <div class="shape1"></div>
                <div class="shape2"></div>
                <div class="shape3"></div>
                <div class="shape4"></div>
                <div class="shape5"></div>
                <div class="shape6"></div>
                <div class="shape7"></div>
                <div class="float">
                    <div class="form">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success btn-block">{{ button_label|default('Inscription') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="registerPaddingBottom"></div>
{% endblock %}
